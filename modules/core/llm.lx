module core.llm;

// Function to get information about the current model
fn get_model_info(model_name: string) -> string {
    let provider = get_provider_default(model_name);
    return "Model: " + model_name + " | Provider: " + provider;
}

// Function to ask with retry
fn ask_with_retry(prompt: string, max_attempts: int) -> string {
    let attempts = 0;
    while attempts < max_attempts {
        let response = ask(prompt);
        if response != "" {
            return response;
        }
        attempts = attempts + 1;
    }
    return "Failed after " + max_attempts.toString() + " attempts";
}

