// Agents basic sample (simulated by default)
let model = get_env_or("LEXON_MODEL", "simulated");
set_default_model(model);

// Create agent with optional budget and deadline
let agent = agent_create("demo", {"model": model, "budget_usd": 0.10, "deadline_ms": 2000});

// Single run
let r1 = agent_run(agent, "Summarize Lexon's value prop in one sentence.");
print(r1);

// Chain (sequential)
let steps = [
  "List 3 key features of Lexon.",
  "Explain Multioutput in one line.",
  "What is RAG used for here?"
];
let chain_res = agent_chain(agent, steps);
print(chain_res);

// Parallel
let tasks = [
  "Give me a tagline for the README",
  "Suggest a short tweet for launch",
  "Propose a section title for documentation"
];
let par = agent_parallel(agent, tasks);
print(par);




